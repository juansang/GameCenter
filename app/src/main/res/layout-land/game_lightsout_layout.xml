<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/black"
    tools:context=".MainLO">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="296dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="231dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="SWITCH ALL THE LIGHTS ON"
                android:textColor="@color/one_zero_two_four"
                android:textSize="15sp"
                android:textStyle="bold"
                android:fontFamily="@font/lightman"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/timer"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:background="@drawable/timer_lo"
                android:gravity="center"
                android:text="00:00:00"
                android:textAlignment="center"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:fontFamily="@font/lightman"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/rest"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/button_customlo"
                android:text="RESTART"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/lightman"
                android:textColor="@color/white"
                android:textSize="7sp" />

            <Button
                android:id="@+id/hint"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/button_customlo"
                android:text="HINT"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:fontFamily="@font/lightman" />

            <Button
                android:id="@+id/new_game"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/button_customlo"
                android:text="NEW"
                android:textColor="@color/white"
                android:textSize="8sp"
                android:fontFamily="@font/lightman" />
        </LinearLayout>

    </LinearLayout>



    <RelativeLayout
        android:id="@+id/lights"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginLeft="95dp">
        <RelativeLayout
            android:id="@+id/firstLights"
            android:layout_width="match_parent"
            android:layout_height="270dp">
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/solLights"
            android:layout_width="match_parent"
            android:layout_height="270dp">
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>